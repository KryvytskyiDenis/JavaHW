<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>StudentCreateServlet</servlet-name>
        <servlet-class>krivitskiy.servlets.StudentCreateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentViewServlet</servlet-name>
        <servlet-class>krivitskiy.servlets.StudentViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentUpdateServlet</servlet-name>
        <servlet-class>krivitskiy.servlets.StudentUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentDeleteServlet</servlet-name>
        <servlet-class>krivitskiy.servlets.StudentDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentCreateServlet</servlet-name>
        <url-pattern>/student/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentViewServlet</servlet-name>
        <url-pattern>/student/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentUpdateServlet</servlet-name>
        <url-pattern>/student/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentDeleteServlet</servlet-name>
        <url-pattern>/student/delete</url-pattern>
    </servlet-mapping>
</web-app>
